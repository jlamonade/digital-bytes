<div class="col col-12">
  <div class="card rounded-0 border-0">
    <div class="card-body">
      <h5 class="card-title">{{title}}</h5>
      <h6 class="card-subtitle">{{user}}</h6>
      <h6 class="card-subtitle">{{format_date createdAt}}</h6>
    </div>
    <div class="card-footer">
      <a class="btn btn-custom" href="/update/{{id}}">Edit</a>
      <a class="btn btn-custom" data-id="{{id}}" id="delete-button">Delete</a>
    </div>
  </div>
</div>
