<div class="row g-2 py-1">
  {{> post-card post}}
</div>
{{#if loggedIn}} 
<div class="row g-2 py-1">
  {{> comment-form}}
</div>
{{else}}
<div class="row g-2 py-1">
  <h3 class="outer-text">Comments</h3>
  <h6 class="outer-text">You must <a href="../login">login</a> to comment</h6>
</div>
{{/if}}
<div class="row g-3 py-1">
  {{#if comments}}
  {{#each comments as |comment|}}
  {{> comment-card comment}}
  {{/each}}
  {{else}}
  <h5 class="outer-text">No Comments Yet...</h5>
  {{/if}}
</div>
<script src="/js/createComment.js"></script>